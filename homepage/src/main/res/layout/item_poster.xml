<?xml version="1.0" encoding="utf-8"?>
<tv.ismar.homepage.widget.HomeItemContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/guide_bottom_item_w"
    android:layout_height="@dimen/guide_bottom_h"
    android:clickable="true"
    android:descendantFocusability="afterDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/poster_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/poster_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guide_bottom_alpha_h"
        android:layout_gravity="bottom"
        android:background="@color/color_alpha_black"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingEnd="@dimen/guide_bottom_text_plr"
        android:paddingStart="@dimen/guide_bottom_text_plr"
        android:singleLine="true"
        android:textColor="@color/color_base_white"
        android:textSize="@dimen/text_size_36sp"
        android:visibility="gone" />

</tv.ismar.homepage.widget.HomeItemContainer>