<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants" android:gravity="center_vertical"
    android:minHeight="@dimen/privilege_min_h">

    <TextView android:id="@+id/title_txt" android:layout_width="@dimen/privilege_item_title_txt_W"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" android:gravity="center_vertical|left"
        android:textSize="@dimen/text_size_27sp" />


    <TextView android:id="@+id/buydate_txt" android:layout_width="@dimen/privilege_item_date_w"
        android:layout_height="wrap_content" android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/privilege_item_date_ml"
        android:layout_toRightOf="@id/title_txt" android:gravity="left|center_vertical"
        android:textSize="@dimen/text_size_27sp" />

    <Button android:id="@+id/btn" android:layout_width="@dimen/privilege_btn_w"
        android:layout_height="@dimen/privilege_min_h" android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/privilege_item_btn_ml"
        android:layout_toRightOf="@id/buydate_txt" android:background="@drawable/selector_button"
        android:textSize="@dimen/text_size_27sp" />
</RelativeLayout>