<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/fragment_padding_lr"
    android:paddingRight="@dimen/fragment_padding_lr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toppage_fragment_linerlayout_h"
        android:layout_marginBottom="@dimen/toppage_fragment_linerlayout_marginbottom"
        android:layout_marginTop="@dimen/toppage_fragment_linerlayout_margintop"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <tv.ismar.homepage.widget.HomeItemContainer
            android:id="@+id/guide_center_layoutview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/guide_padding"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusRight="@+id/toppage_carous_imageView1">


            <tv.ismar.homepage.widget.DaisyVideoView
                android:id="@+id/linked_video"
                android:layout_width="@dimen/guide_video_width"
                android:layout_height="@dimen/guide_video_height"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <ImageView
                android:id="@+id/linked_video_loading_image"
                android:layout_width="@dimen/guide_video_width"
                android:layout_height="@dimen/guide_video_height" />

        </tv.ismar.homepage.widget.HomeItemContainer>

        <include
            layout="@layout/toppagecarouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/guide_center_layoutview"
            android:clipChildren="false"
            android:clipToPadding="false" />
    </RelativeLayout>

    <tv.ismar.homepage.widget.DaisyViewContainer
        android:id="@+id/recommend_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toppage_fragment_recommend_list_h"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:descendantFocusability="afterDescendants"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/toppage_fragment_recommend_list_padding"
        app:horizontal_spacing="@dimen/guide_recommend_item_spacing"
        app:item_height="@dimen/guide_recommend_item_height"
        app:item_width="@dimen/guide_recommend_item_width"></tv.ismar.homepage.widget.DaisyViewContainer>

</LinearLayout>