<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_toast_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="@dimen/toast_layout_W"
        android:layout_height="@dimen/toast_layout_H"
        android:background="@drawable/simple_toast"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/toast_padding"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/toast_textsize" />
    </LinearLayout>

</LinearLayout>