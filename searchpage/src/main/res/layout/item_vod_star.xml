<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/star_vod_list_item_new"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_vod_image_layout_new"
        android:layout_width="@dimen/item_vod_image_layout_new_w"
        android:layout_height="@dimen/item_vod_image_layout_new_h"
        android:background="@drawable/selector_star_list_item">

        <ImageView
            android:id="@+id/item_vod_image_new"
            android:layout_width="@dimen/item_vod_image_layout_new_w"
            android:layout_height="@dimen/item_vod_image_layout_new_h"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/ItemBeanScore"
            android:layout_width="@dimen/list_vip_score_w"
            android:layout_height="@dimen/list_vip_score_h"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/list_vip_score_mr"
            android:layout_marginTop="@dimen/list_vip_score_horizon_mt"
            android:gravity="center"
            android:textColor="@color/beanscore_color"
            android:textSize="@dimen/score_tag_txt_size"
            android:textStyle="bold"
            android:visibility="gone" />


        <tv.ismar.searchpage.weight.RotateTextView
            android:id="@+id/expense_txt"
            android:layout_width="@dimen/VIP_tag_w"
            android:layout_height="@dimen/VIP_tag_h"
            android:background="@drawable/list_ismar"
            android:gravity="center"
            android:textColor="@color/expense_text_color"
            android:textSize="@dimen/tag_txt_size"
            android:textStyle="bold"
            android:visibility="gone"></tv.ismar.searchpage.weight.RotateTextView>
