<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/progress_view"
        android:layout_width="@dimen/loading_progress_width"
        android:layout_height="@dimen/loading_progress_height"
        android:layout_marginStart="@dimen/loading_progress_margin_left"
        android:layout_marginTop="@dimen/loading_progress_margin_top"
        android:background="@drawable/searching_progress" />

    <ImageView
        android:layout_width="@dimen/loading_iv_width"
        android:layout_height="@dimen/loading_iv_height"
        android:layout_below="@id/progress_view"
        android:layout_marginStart="@dimen/loading_iv_margin_left"
        android:layout_marginTop="@dimen/loading_iv_margin_top"
        android:src="@drawable/loading_text_img" />


</RelativeLayout>