<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/header_fragment_mine_space">

    <TextView
        android:id="@+id/weather_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_24sp" />

    <ImageView
        android:id="@+id/indicator_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_fragment_mine_indicator_h"
        android:scaleType="fitXY"
        android:src="@drawable/indicator_image"
        android:visibility="invisible" />

</LinearLayout>