<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alipayyktmmrenewal_desc_line_1ml"
            android:layout_marginTop="@dimen/alipayyktmmrenewal_desc_line_1mt"
            android:text="·到期前1天为您自动续费，自动延长1个月"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_28sp"/>

        <TextView
            android:id="@+id/description_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alipayyktmmrenewal_desc_line_2ml"
            android:layout_marginTop="@dimen/alipayyktmmrenewal_desc_line_2mt"
            android:text="@string/yktmm_price"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_28sp"/>

        <TextView
            android:id="@+id/description_line_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alipayyktmmrenewal_desc_line_3ml"
            android:layout_marginTop="@dimen/alipayyktmmrenewal_desc_line_3mt"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_28sp"/>

        <TextView
            android:id="@+id/description_line_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alipayyktmmrenewal_desc_line_4ml"
            android:layout_marginTop="@dimen/alipayyktmmrenewal_desc_line_4mt"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_28sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alipayyktmmrenewal_btnlayout_ml">

            <Button
                android:id="@+id/confirm"
                android:layout_width="@dimen/alipayyktmmrenewal_btnconfirm_w"
                android:layout_height="@dimen/alipayyktmmrenewal_btnconfirm_h"
                android:background="@drawable/pay_type_change_selector"
                android:text="确认开通连续包月"
                android:textSize="@dimen/text_size_36sp"/>

            <Button
                android:id="@+id/cancel"
                android:layout_width="@dimen/alipayyktmmrenewal_btncancel_w"
                android:layout_height="@dimen/alipayyktmmrenewal_btncancel_h"
                android:layout_marginLeft="@dimen/alipayyktmmrenewal_btncancel_ml"
                android:background="@drawable/pay_type_change_selector"
                android:text="切换为普通扫码"
                android:textSize="@dimen/text_size_36sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alipayyktmmrenewal_agreement_ml"
            android:layout_marginTop="@dimen/alipayyktmmrenewal_agreement_mt"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusDown="@id/agreement"
            android:textColor="@drawable/alipay_renewal_agreement_selector"
            android:textSize="@dimen/text_size_24sp"
            />

    </LinearLayout>
</layout>