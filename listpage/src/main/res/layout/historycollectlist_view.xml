            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/clear_history_Ml"
            android:layout_marginTop="@dimen/history_top_textBl"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/claer_histories"
            android:textSize="@dimen/vod_payment_price_textsize" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1dp"
        android:layout_marginStart="@dimen/divider_blowhead_ML"
        android:layout_marginEnd="@dimen/divider_blowhead_ML"
        android:scaleType="fitXY"
        android:src="@drawable/orderlistdivide" />

    <LinearLayout
        android:id="@+id/tabs_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gridview_channel_panel_height"
        android:layout_marginStart="@dimen/channel_section_tabs_layout_marginLeft"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="@dimen/grid_view_main_arrow_left_W"
            android:layout_height="@dimen/grid_view_main_arrow_left_H"
            android:layout_marginTop="@dimen/grid_view_main_arrow_left_marginT"
            android:background="@drawable/arrow_left_selector"
            android:visibility="invisible" />

        <tv.ismar.app.widget.ScrollableSectionList
            android:id="@+id/section_tabs"
            android:layout_width="@dimen/gridview_channel_section_tabs_width"
            android:layout_height="match_parent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scrollbars="none"
            android:visibility="gone"></tv.ismar.app.widget.ScrollableSectionList>

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="@dimen/grid_view_main_arrow_left_W"
            android:layout_height="@dimen/grid_view_main_arrow_left_H"
            android:layout_marginTop="@dimen/grid_view_main_arrow_left_marginT"
            android:background="@drawable/arrow_right_selector"
            android:visibility="invisible" />
