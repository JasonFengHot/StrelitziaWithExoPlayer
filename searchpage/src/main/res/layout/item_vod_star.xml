        <TextView
                android:id="@+id/item_vod_focus_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#b2000000"
                android:gravity="center"
                android:maxLength="8"
                android:singleLine="true"
                android:textSize="@dimen/textSize_24sp"
                android:visibility="invisible"

                />
    </RelativeLayout>


    <TextView
            android:id="@+id/item_vod_title_new"
            android:layout_width="@dimen/item_vod_title_new_w"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_vod_image_layout_new"
            android:layout_below="@id/item_vod_image_layout_new"
            android:layout_centerHorizontal="true"
