<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#0e163a" android:clipChildren="false" android:clipToPadding="false"

>

    <LinearLayout android:id="@+id/large_layout" android:layout_width="match_parent"
        android:layout_height="match_parent" android:clipChildren="false"
        android:clipToPadding="false" android:focusable="false" android:orientation="vertical">

        <FrameLayout android:id="@+id/header" android:layout_width="match_parent"
            android:layout_height="@dimen/usercenter_header_height" android:focusable="false" />

        <ImageView android:layout_width="match_parent"
            android:layout_height="@dimen/usercenter_horizontal_divider_line_height"
            android:layout_marginLeft="@dimen/horizontal_divider_ml"
            android:layout_marginRight="@dimen/horizontal_divider_mr" android:focusable="false"
            android:scaleType="fitXY" android:src="@drawable/horizontal_divider_line" />

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:focusable="true" />

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:clipChildren="false" android:clipToPadding="false"
            android:orientation="horizontal">

            <LinearLayout android:id="@+id/user_center_indicator_layout"
                android:layout_width="@dimen/usercenter_fragment_indicator_layout_width"
                android:layout_height="match_parent" android:orientation="vertical" />


            <ImageView android:layout_width="@dimen/usercenter_vertical_divider_line2_width"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/usercenter_vertical_divider_line_mt"
                android:focusable="false" android:scaleType="fitXY"
                android:src="@drawable/vertical_divider_line" />


            <FrameLayout android:id="@+id/user_center_container"
                android:layout_width="@dimen/user_center_container_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/user_center_container_marginLeft" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>