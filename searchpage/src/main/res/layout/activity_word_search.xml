<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_search"
    android:layout_width="@dimen/main_width"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/main_width"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include
            android:id="@+id/search_keyboard"
            layout="@layout/keyboard"></include>

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/item_hotword_iv_height"
            android:layout_height="match_parent"
            android:background="#405185" />

        <include layout="@layout/hotword"></include>

        <include
            android:id="@+id/search_guide"
            layout="@layout/search_guide" />

        <include layout="@layout/search_subject" />
    </LinearLayout>

    <View
        android:id="@+id/lay_focus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false" />
